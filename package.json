{
  "name": "smartfrigo",
  "version": "2.0.0",
  "scripts": {
    "start": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "lite": "lite-server",
    "postinstall": "typings install",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "build": "npm run copyscripts && tsc && browserify -t browserify-css scripts/index.js | uglifyjs > scripts/bundle.js",
    "copyscripts": "copyfiles -f node_modules/systemjs/dist/system.js scripts",
    "zipit": "npm run build && node zipscript.js"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/common": "2.0.0-rc.3",
    "@angular/compiler": "2.0.0-rc.3",
    "@angular/core": "2.0.0-rc.3",
    "@angular/http": "2.0.0-rc.3",
    "@angular/platform-browser": "2.0.0-rc.3",
    "@angular/platform-browser-dynamic": "2.0.0-rc.3",
    "@angular/router": "2.0.0-rc.2",
    "@angular/upgrade": "2.0.0-rc.3",
    "archiver": "^1.0.0",
    "bootstrap": "^3.3.6",
    "core-js": "^2.4.0",
    "easy-zip": "0.0.4",
    "jquery": "2.2.4",
    "jquery-ui": "1.10.4",
    "jszip": "latest",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "systemjs": "0.19.27",
    "zone.js": "^0.6.12"
  },
  "devDependencies": {
    "browserify": "latest",
    "browserify-css": "^0.9.1",
    "browserify-shim": "^3.8.12",
    "concurrently": "^2.0.0",
    "lite-server": "^2.2.0",
    "retyped-archiver-tsd-ambient": "^0.15.0-0",
    "typescript": "^1.8.10",
    "typings": "^1.0.4"
  },
  "browser": {
    "customPlugin": "path/to/custom/plugin",
    "jquery": "./node_modules/jquery/dist/jquery.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "angular2": "global:angular2",
    "jquery": "jQuery",
    "customPlugin": {
      "depends": [
        "jquery:jQuery"
      ]
    }
  },
  "browserify-css": {
    "autoInject": true,
    "minify": true,
    "rootDir": "."
  }
}
